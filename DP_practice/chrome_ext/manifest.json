{
    "name": "chrome-basic-extension",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "macro recorder",
    "homepage_url": "https://www.google.com",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Inject!"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}
